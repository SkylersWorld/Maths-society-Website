    <script>
        // ============ THEME TOGGLE (same as main page) ============
        function updateThemeIcon() {
            const body = document.body;
            const icon = document.getElementById("theme-toggle-icon");
            const isLight = body.classList.contains("light-theme");
            icon.textContent = isLight ? "☾" : "☼";
        }

        function applyStoredTheme() {
            const stored = localStorage.getItem("theme");
            if (stored === "light") {
                document.body.classList.add("light-theme");
            }
            updateThemeIcon();
        }

        function toggleTheme() {
            const body = document.body;
            body.classList.toggle("light-theme");
            const isLight = body.classList.contains("light-theme");
            localStorage.setItem("theme", isLight ? "light" : "dark");
            updateThemeIcon();
        }

        // ============ SOLUTIONS ACCORDION ============

        const solutionsTopics = [
            "Financial Math",
            "Pure Math",
            "Mathematical Physics",
            "CS Math",
            "Medicinal Math",
        ];

        function toggleAccordion(contentId) {
            const content = document.getElementById(contentId);
            const header = content.previousElementSibling;
            const button = header.querySelector('.chevron-button');
            const isCurrentlyOpen = content.style.maxHeight && content.style.maxHeight !== '0px';

            const container = document.getElementById('solutions-accordion');

            if (isCurrentlyOpen) {
                content.style.maxHeight = '0px';
                if (button) button.classList.remove('rotate-180');
            } else {
                Array.from(container.querySelectorAll('.accordion-content')).forEach(otherContent => {
                    if (otherContent.id !== contentId && otherContent.style.maxHeight && otherContent.style.maxHeight !== '0px') {
                        otherContent.style.maxHeight = '0px';
                        const otherHeader = otherContent.previousElementSibling;
                        const otherButton = otherHeader ? otherHeader.querySelector('.chevron-button') : null;
                        if (otherButton) otherButton.classList.remove('rotate-180');
                    }
                });

                setTimeout(() => {
                    content.style.maxHeight = content.scrollHeight + "px";
                    if (button) button.classList.add('rotate-180');
                }, 10);
            }
        }

        function renderSolutionsAccordion() {
            const container = document.getElementById('solutions-accordion');
            if (!container) return;

            let accordionHtml = '';

            solutionsTopics.forEach((topic, index) => {
                const contentId = `solution-content-${index}`;

                accordionHtml += `
                    <div class="solution-card rounded-2xl border border-slate-800 bg-slate-950/80 shadow-md overflow-hidden">
                        <h4 class="px-4 py-3 flex items-center justify-between cursor-pointer transition hover:bg-slate-900/80"
                            onclick="toggleAccordion('${contentId}')">
                            <span class="flex items-center space-x-3 text-base font-semibold text-slate-100">
                                <span class="inline-flex h-8 w-8 items-center justify-center rounded-lg bg-slate-900 border border-slate-700">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                         viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                         stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                                         class="text-red-300">
                                        <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20"/>
                                        <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z"/>
                                    </svg>
                                </span>
                                <span>${topic}</span>
                            </span>
                            <button class="chevron-button transition-transform duration-300 text-red-300 focus:outline-none"
                                    aria-expanded="false" aria-controls="${contentId}">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20"
                                     viewBox="0 0 24 24" fill="none" stroke="currentColor"
                                     stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <polyline points="6 9 12 15 18 9"/>
                                </svg>
                            </button>
                        </h4>
                        <div id="${contentId}" class="accordion-content border-t border-slate-800 bg-slate-950/90" aria-hidden="true">
                            <div class="px-4 py-4 text-center">
                                <p class="mb-1 text-xs uppercase tracking-[0.2em] text-slate-400">
                                    Coming soon
                                </p>
                                <p class="font-extrabold text-xl text-slate-50">
                                    View solutions on 17th November
                                </p>
                            </div>
                        </div>
                    </div>
                `;
            });

            container.innerHTML = accordionHtml;
        }

        // Init
        document.addEventListener("DOMContentLoaded", () => {
            applyStoredTheme();

            const themeBtn = document.getElementById("theme-toggle");
            if (themeBtn) {
                themeBtn.addEventListener("click", toggleTheme);
            }

            renderSolutionsAccordion();
        });
    </script>
</body>
</html>
