    <script>
        // Data for the five Olympiad topics with refined icons (geometric/abstract look)
        const olympiadTopics = [
            {
                // Geometric Growth Chart for Finance
                iconSvg: '<polyline points="22 12 18 8 12 16 6 4 2 8"/><circle cx="22" cy="12" r="1.5"/><circle cx="2" cy="8" r="1.5"/>',
                title: "Financial Math",
                description: "This category challenges your ability to model and solve complex problems in financial mathematics, including portfolio optimization, risk assessment, and basic quantitative trading principles. Focus on calculus and probability applications.",
            },
            {
                // Abstract mathematical Symbol (Infinity/Abstract concept)
                iconSvg: '<path d="M2 12s2-4 8-4c9 0 10 4 10 4s-1 4-10 4c-6 0-8-4-8-4Z"/><path d="M22 12s-2 4-8 4c-9 0-10-4-10-4s1-4 10-4c6 0 8 4 8 4Z"/>',
                title: "Pure Math",
                description: "Focuses on abstract concepts, number theory, algebraic structures, and combinatorics. Problems in this area require deep analytical thought and proof-writing skills, often relying on formal logic and induction.",
            },
            {
                // Atomic/Orbital Model for Physics
                iconSvg: '<circle cx="12" cy="12" r="3"/><path d="M16.2 7.8c0-3.3-2.7-6-6-6S4.2 4.5 4.2 7.8"/><path d="M19.8 16.2c0 3.3-2.7 6-6 6s-6-2.7-6-6"/>',
                title: "Mathematical Physics",
                description: "Requires solving differential equations and integrating physical laws into mathematical models. Key areas include classical mechanics, thermodynamics, and electromagnetism, focusing on vector calculus and ODEs.",
            },
            {
                // Angular Brackets/Algorithm Flow for Computer Science Math
                iconSvg: '<polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/><line x1="12" y1="4" x2="12" y2="20"/>',
                title: "CS Math",
                description: "Explores the mathematical foundations of computer science, including complexity theory, graph algorithms, discrete mathematics, and boolean algebra. This category is essential for understanding data structures and algorithms.",
            },
            {
                // Data Wave / Epidemiology Model for Medicinal Math
                iconSvg: '<rect x="2" y="6" width="20" height="12" rx="2"/><path d="M5 12h2l2 4 4-8 2 4h2"/>',
                title: "Medicinal Math",
                description: "Applies mathematical techniques to biological systems and medical data. This includes statistical modeling of epidemics, dose-response curves, and modeling physiological processes using systems of differential equations.",
            },
        ];

        // This function handles the opening and closing logic for the NESTED topics accordions
        function toggleAccordion(contentId) {
            const content = document.getElementById(contentId);
            
            // The chevron button is a direct child of the previous sibling (the header element)
            const header = content.previousElementSibling;
            const button = header.querySelector('.chevron-button');
            
            // Check if it's currently open
            const isCurrentlyOpen = content.style.maxHeight && content.style.maxHeight !== '0px';

            const container = document.getElementById('topics-accordion');

            if (isCurrentlyOpen) {
                content.style.maxHeight = '0px'; // Close it
                if (button) button.classList.remove('rotate-180');
            } else {
                // Close all other open accordion items in the same container
                Array.from(container.querySelectorAll('.accordion-content')).forEach(otherContent => {
                    if (otherContent.id !== contentId && otherContent.style.maxHeight && otherContent.style.maxHeight !== '0px') {
                        otherContent.style.maxHeight = '0px';
                        const otherHeader = otherContent.previousElementSibling;
                        const otherButton = otherHeader ? otherHeader.querySelector('.chevron-button') : null;
                        if (otherButton) otherButton.classList.remove('rotate-180');
                    }
                });

                // Open the target one
                // Use a slight delay and animation frame to ensure scrollHeight is calculated correctly after closing others
                setTimeout(() => {
                    content.style.maxHeight = content.scrollHeight + "px";
                    if (button) button.classList.add('rotate-180');
                }, 10); // Small delay
            }
        }

        /**
         * Creates the HTML structure for the collapsible topics accordion (nested).
         */
        function renderTopicsAccordion() {
            const container = document.getElementById('topics-accordion');
            if (!container) return;

            let accordionHtml = '';

            olympiadTopics.forEach((topic, index) => {
                const contentId = `topic-content-nested-${index}`;

                // Header/Title with Clickable Button
                const header = `
                    <div class="border border-2 border-stone-200 bg-stone-50 rounded-xl shadow-md overflow-hidden">
                        <h4 class="p-4 flex items-center justify-between cursor-pointer transition duration-150 hover:bg-red-50" onclick="toggleAccordion('${contentId}')">
                            <span class="flex items-center space-x-4 text-xl font-bold text-gray-800">
                                <!-- Icon for the topic -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-7 h-7 text-red-600">
                                    ${topic.iconSvg}
                                </svg>
                                <span>${topic.title}</span>
                            </span>
                            <button class="chevron-button transition-transform duration-300 text-red-600 focus:outline-none" aria-expanded="false" aria-controls="${contentId}">
                                <!-- Chevron Icon (Lucide) -->
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="6 9 12 15 18 9"/></svg>
                            </button>
                        </h4>
                        <!-- Content Area (Initially hidden) -->
                        <div id="${contentId}" class="accordion-content" aria-hidden="true">
                            <div class="p-4 pt-0 text-gray-700 border-t border-stone-200 bg-white">
                                <p class="mb-2 font-medium">${topic.description}</p>
                            </div>
                        </div>
                    </div>
                `;
                accordionHtml += header;
            });

            container.innerHTML = accordionHtml;
        }

        // Run the render function when the window loads
        window.onload = () => {
              renderTopicsAccordion();
        }
    </script>
</body>
</html>
