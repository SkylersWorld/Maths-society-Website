    <script>
        // Data for the timeline steps
        const odysseySteps = [
            {
                // Lucide icon SVG path for Calendar
                iconSvg: '<path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/>',
                title: "Phase 1: Foundations & Ideation",
                description: "Establishing the core team, defining our mission, and hosting the first series of brainstorming workshops to identify key innovation areas.",
                date: "August 2023 - October 2023",
                color: 'red-600' // Red
            },
            {
                // Lucide icon SVG path for Code
                iconSvg: '<polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/>',
                title: "Phase 2: Skill-Building Sprints",
                description: "Focused training sessions on critical technologies like IoT, Web Development, and 3D Modeling. Hands-on projects build foundational expertise.",
                date: "November 2023 - January 2024",
                color: 'stone-800' // Black/Dark contrast
            },
            {
                // Lucide icon SVG path for Zap
                iconSvg: '<polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"/>',
                title: "Phase 3: The Project Incubator",
                description: "Teams form to execute their flagship projects. Regular mentorship sessions and technical reviews guide the development process towards viability.",
                date: "February 2024 - April 2024",
                color: 'red-600' // Red
            },
            {
                // Lucide icon SVG path for Award
                iconSvg: '<circle cx="12" cy="8" r="7"/><polyline points="8.21 13.89 7 23 12 18 17 23 15.79 13.88"/>',
                title: "Phase 4: Showcase & Recognition",
                description: "Presenting completed projects to the community and industry experts. Celebrating achievements and securing seed funding for the most promising ventures.",
                date: "May 2024 - June 2024",
                color: 'stone-800' // Black/Dark contrast
            },
            {
                // Lucide icon SVG path for Rocket
                iconSvg: '<path d="M4.5 5.5l5 5"/><path d="M12 2c5 0 9 4 9 9 0 5-4 9-9 9 0 0-4.5-4.5-9-9 0 0 4-5.5 9-9z"/><path d="M12 12l-5 5"/>',
                title: "Phase 5: Scaling the Impact",
                description: "Looking beyond the initial phase, preparing for new members, and planning the next set of ambitious challenges to expand the club's influence.",
                date: "Ongoing",
                color: 'red-600' // Red
            },
        ];

        /**
         * Creates the HTML string for a single timeline card.
         * @param {Object} step The step data object.
         * @param {number} index The index of the step in the array.
         * @returns {string} The complete HTML string for the timeline item.
         */
        function createTimelineCardHtml(step, index) {
            const isLeft = index % 2 === 0;
            const cardAlignment = isLeft ? 'md:pr-12' : 'md:pl-12';
            // Note: The empty spacer below is technically necessary only for aligning the card structure in the loop
            const emptySpacer = isLeft ? '' : '<div class="w-full md:w-5/12 hidden md:block"></div>'; 
            
            // Use dynamic color from step data (red-600 or stone-800)
            const borderStyle = `border-${step.color}`;
            const iconStyle = `text-${step.color}`;

            // Template for the SVG icon
            const iconHtml = `
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-6 h-6 ${iconStyle}">
                    ${step.iconSvg}
                </svg>
            `;

            const html = `
                <div class="relative mb-8 flex w-full justify-between items-center">
                    
                    <!-- Empty Spacer (Left side for right-aligned cards) -->
                    ${isLeft ? '<div class="w-full md:w-5/12 hidden"></div>' : emptySpacer}

                    <!-- Circle Icon (Appears only on medium screens and up) - uses current step color for border -->
                    <div class="hidden md:block absolute left-1/2 transform -translate-x-1/2 rounded-full p-3 shadow-xl z-10 bg-white border-4 border-${step.color}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="w-5 h-5 text-gray-700">
                            ${step.iconSvg}
                        </svg>
                    </div>

                    <!-- Card Wrapper - uses current step color for top border -->
                    <div class="w-full md:w-5/12 ${cardAlignment}">
                        <div class="p-6 rounded-xl shadow-2xl bg-white border-t-4 ${borderStyle} transition-transform duration-300 hover:scale-[1.02]">
                            <div class="flex items-center space-x-4 mb-3">
                                ${iconHtml}
                                <h3 class="text-xl font-bold text-gray-800">${step.title}</h3>
                            </div>
                            <p class="text-sm font-medium text-gray-500 mb-2">${step.date}</p>
                            <p class="text-gray-600">${step.description}</p>
                        </div>
                    </div>
                    
                </div>
            `;
            return html;
        }

        // Function to render the entire timeline
        function renderTimeline() {
            const container = document.getElementById('timeline-container');
            if (!container) return;

            let timelineHtml = '';
            odysseySteps.forEach((step, index) => {
                timelineHtml += createTimelineCardHtml(step, index);
            });

            // Add the main vertical line (Red)
            const connectorLine = '<div class="absolute top-0 left-1/2 -ml-0.5 h-full w-0.5 bg-red-600 hidden md:block"></div>';
            
            container.innerHTML = connectorLine + timelineHtml;
        }

        // Run the render function when the window loads
        window.onload = renderTimeline;
    </script>
</body>
</html>
